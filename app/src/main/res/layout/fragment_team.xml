<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.practicum.android.diploma.presentation.TeamFragment">

    <TextView
        android:id="@+id/toolbar_settings"
        style="@style/HeaderStyle"
        android:layout_width="0dp"
        android:text="@string/team"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/size_36"
        android:layout_marginEnd="@dimen/dp_16"
        android:fontFamily="@font/ys_display_bold"
        android:text="@string/done_by"
        android:textColor="@color/blackDayWhiteNight"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_settings" />

    <TextView
        android:id="@+id/text_name1"
        style="@style/TeamStyle"
        android:layout_marginTop="@dimen/spacing_32dp"
        android:text="@string/team_Semenov"
        app:layout_constraintStart_toStartOf="@+id/text_main"
        app:layout_constraintTop_toBottomOf="@+id/text_main" />

    <TextView
        android:id="@+id/text_name2"
        style="@style/TeamStyle"
        android:text="@string/team_Zaharin"
        app:layout_constraintStart_toStartOf="@+id/text_main"
        app:layout_constraintTop_toBottomOf="@+id/text_name1" />

    <TextView
        android:id="@+id/text_name3"
        style="@style/TeamStyle"
        android:text="@string/team_Bugrov"
        app:layout_constraintStart_toStartOf="@+id/text_main"
        app:layout_constraintTop_toBottomOf="@+id/text_name2" />

    <TextView
        android:id="@+id/text_name4"
        style="@style/TeamStyle"
        android:text="@string/team_Margina"
        app:layout_constraintStart_toStartOf="@+id/text_main"
        app:layout_constraintTop_toBottomOf="@+id/text_name3" />

    <TextView
        android:id="@+id/text_name5"
        style="@style/TeamStyle"
        android:text="@string/team_Harhanov"
        app:layout_constraintStart_toStartOf="@+id/text_main"
        app:layout_constraintTop_toBottomOf="@+id/text_name4" />

</androidx.constraintlayout.widget.ConstraintLayout>


