<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/placeholderServerError"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewSever"
        android:layout_width="328dp"
        android:layout_height="223dp"
        android:visibility="invisible"
        android:contentDescription="@string/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/il_3_server_cry" />

    <ImageView
        android:id="@+id/imageViewCat"
        android:layout_width="328dp"
        android:layout_height="223dp"
        android:visibility="visible"
        android:contentDescription="@string/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/il_angry_cat" />

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_16dp"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center"
        android:text="@string/server_error"
        android:textColor="@color/blackDayWhiteNight"
        android:textSize="@dimen/sp_22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageViewSever"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSever" />

</androidx.constraintlayout.widget.ConstraintLayout>
