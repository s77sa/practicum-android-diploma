<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NavigationViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/whiteDayBlackNight</item>
        <item name="itemIconTint">@drawable/bottomnav_main_menu_color</item>
        <item name="itemTextColor">@drawable/bottomnav_main_menu_color</item>
        <item name="menu">@menu/bottom_navigation_menu</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/blackDayWhiteNight</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TeamStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/blackDayWhiteNight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HeaderBackArrowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="srcCompat">@drawable/ic_back_arrow</item>
    </style>

    <style name="SelectHeaderStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/blackDayWhiteNight</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="medium_font_22px">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blackDayWhiteNight</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bold_font_32sp">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blackDayWhiteNight</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="regular_font_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blackDayWhiteNight</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="medium_font_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blackDayWhiteNight</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="big_blue_button">
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/yp_blue</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="VacancyItemTVStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/blackDayWhiteNight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="salary_check">
        <item name="colorAccent">@color/yp_blue</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/yp_blue</item>
    </style>

    <style name="TextInputLayoutFilled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorPrimary">@color/yp_blue</item>
        <item name="cursorColor">@color/yp_blue</item>
        <item name="hintTextColor">@color/yp_gray</item>
        <item name="android:textColorHint">@color/yp_gray</item>
    </style>

</resources>
